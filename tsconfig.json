{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types","./src/types/global.d.ts"]

  },
  "include": ["src/**/*", "server.ts",  "./src/types/**/*"],
  "exclude": ["node_modules", "dist"]
}
